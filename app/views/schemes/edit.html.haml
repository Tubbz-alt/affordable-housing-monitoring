- content_for(:page_title) { @scheme.errors.any? ? page_title("Errors on page - Edit scheme #{@scheme.application_number}") : page_title("Edit scheme #{@scheme.application_number}") }

.govuk-width-container
  = link_to "Back to scheme", scheme_path(@scheme), class: "govuk-back-link"

  = render partial: 'partials/error_block', locals: { record: @scheme }
  .govuk-grid-row
    .govuk-grid-column-full
      %fieldset.govuk-fieldset
        %legend.govuk-fieldset__legend.govuk-fieldset__legend--xl
          %h1.govuk-fieldset__heading Edit details of scheme

        .govuk-grid-row{class: 'govuk-!-margin-top-7'}
          .govuk-grid-column-two-thirds-from-desktop
            = simple_form_for @scheme do |f|
              = render partial: 'form', locals: {f: f}
              .govuk-form-group
                = f.submit t('buttons.submit'), class: "govuk-button govuk-!-margin-right-1"
