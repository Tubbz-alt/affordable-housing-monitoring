%header.govuk-header{"data-module" => "govuk-header", :role => "banner"}
  .govuk-header__container.govuk-width-container
    .govuk-header__logo
      %a.govuk-header__link.govuk-header__link--homepage{:href => "#"}
        %span.govuk-header__logotype
          = image_tag 'logo-white.png', alt: "Southwark Council logo"
    .govuk-header__content
      %a.govuk-header__link.govuk-header__link--service-name{:href => "#"}= t('service_name')
      %button.govuk-header__menu-button.govuk-js-header-toggle{"aria-controls" => "navigation", "aria-label" => "Show or hide Top Level Navigation", :role => "button", :type => "button"} Menu
      %nav
        %ul#navigation.govuk-header__navigation{"aria-label" => "Top Level Navigation"}
          - if current_user
            %li.govuk-header__navigation-item
              Logged in as
              = current_user.email
            %li.govuk-header__navigation-item
              = button_to t('authentication.log_out'), destroy_user_session_path, method: :delete, class: "button-as-link govuk-header__link"
